{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.[tj]sx?$": "ts-jest"
  },
  "testRegex": "/test/.*\\.(test|spec).(ts|tsx|js)$",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,tsx,ts}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": [
    "json",
    "lcov"
  ],
  "globals": {
    "ts-jest": {
      "noEmitOnError": true
    }
  }
}
